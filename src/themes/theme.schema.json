{
	"$id": "https://hefang.link/schema/hefang-cms/theme.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "hefang-cms主题声明文件",
	"type": "object",
	"required": [
		"id",
		"name",
		"version"
	],
	"properties": {
		"id": {
			"type": "string",
			"description": "主题id"
		},
		"name": {
			"type": "string",
			"description": "主题名称"
		},
		"version": {
			"type": "string",
			"description": "主题版本",
			"pattern": "^\\d{1,10}(\\.\\d{1,10}){0,2}$"
		},
		"description": {
			"type": "string",
			"description": "主题描述"
		},
		"locales": {
			"description": "主题支持的语言",
			"anyOf": [
				{
					"type": "array",
					"minItems": 1,
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/localeItem"
					}
				},
				{
					"$ref": "#/definitions/localeItem"
				}
			]
		},
		"tags": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 0,
			"items": {
				"type": "string"
			},
			"description": "主题标签"
		},
		"homepage": {
			"type": "string",
			"description": "主题主页"
		},
		"issues": {
			"type": "string",
			"description": "主题反馈页"
		},
		"author": {
			"$ref": "#/definitions/author"
		},
		"settings": {
			"type": "array",
			"description": "主题设置",
			"items": {
				"$ref": "#/definitions/settingItem"
			}
		}
	},
	"definitions": {
		"author": {
			"type": "object",
			"required": [
				"name"
			],
			"properties": {
				"name": {
					"type": "string",
					"description": "作者称呼"
				},
				"email": {
					"type": "string",
					"description": "作者邮箱"
				},
				"site": {
					"type": "string",
					"description": "作者个人网站"
				}
			}
		},
		"settingItem": {
			"type": "object",
			"required": [
				"key",
				"name",
				"type"
			],
			"properties": {
				"key": {
					"type": "string",
					"description": "配置项的key",
					"minLength": 1,
					"maxLength": 64
				},
				"name": {
					"type": "string",
					"description": "配置项名称",
					"minLength": 1,
					"maxLength": 32
				},
				"type": {
					"type": "string",
					"description": "配置项类型",
					"enum": [
						"object",
						"number",
						"textarea",
						"text",
						"html",
						"boolean",
						"image",
						"code",
						"checkbox",
						"radio",
						"date",
						"datetime",
						"time",
						"range"
					]
				},
				"description": {
					"type": "string",
					"description": "配置项描述"
				},
				"default": {
					"type": [
						"object",
						"string",
						"number",
						"boolean",
						"array"
					],
					"description": "配置项默认值"
				}
			}
		},
